{
  "name": "FindItNow",
  "version": "1.0",
  "description": "Find the meaning of a word in the page",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "ContentScript.js" ]
    }
  ],
  "background": {
    "scripts": [ "Background.js" ],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs"
  ]

}
